<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/fontawesome-all.css">
    </head>
    
    <body>
        <div class="container">
            <% include ./partials/navfbk %>
            <form method="post" action="/user/changePassword/" style="padding: 20px" onsubmit="return comparePasswords()">
                <div class="form-group">
                    
                    <label for="shortname" class="text-primary">User short name</label>
                    <input type="text" class="form-control" id="shortname" name="shortname" value="<%=shortname%>" />
                    
                    <label for="emailname" class="text-primary">User email address</label>
                    <input type="text" class="form-control" value="<%=emailname%>" readonly />
                    
                    <label for="password1" class="text-primary">User password</label>
                    <input type="password" class="form-control" id="password1" name="password1" />
                    
                    <label for="password2" class="text-primary">Enter again</label>
                    <input type="password" class="form-control" id="password2" name="password2" />
                    
                </div>
    
                <input type="submit" class="btn btn-primary" value="Change password" />
    
            </form>
        </div> <!-- container -->

        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

        <script>
            function comparePasswords () {
                console.log("in comparePasswords function");
                const p1 = $('#password1');
                const p1val = p1.val();
                const p2 = $('#password2');
                const p2val = p2.val();
                let result = false;
                console.log("p1: " + p1val + ", p2: " + p2val);
                if(p1val !== p2val) {
                    alert("The 2 passwords do not match.")
                    p1.val("");
                    p2.val("");
                    p1.focus(); 
                    result = false; 
                } else {
                    result = true;
                }
                return result;
            }
        </script>
        
    </body>
    
</html>
