<!DOCTYPE html>
<html>
    <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/fontawesome-all.css">
    </head>
    
    <body>
        <div class="container">
            <a href="javascript:hideDivId('fbksIn')">Hide received feedback</a>
            <div id="fbksIn">
                <% include ./partials/navfbk %>
                <br />

                <%  let fbk = {}; %>
                <% if (myFbksIn.length == 0) { %>
                    <h5 style="color: #007bff;">No feedback gifts to display. Maybe you should ask for some?</h5>
                <%} else {%>
                    <h5 style="color: #007bff;">Hey, <%=myFbksIn[0].fbkee.shortname%>, here's the feedback you've received</h5>
                    <% for(let i = 0; i < myFbksIn.length; i++) { 
                        fbk = myFbksIn[i] %>
                        <% include ./partials/showfbk %>
                    <% } %> 
                <% } %>
            </div>

            <div id="fbksOut">
                <%  fbk = {}; %>
                <% if (myFbksOut.length == 0) { %>
                    <h5 style="color: #007bff;">You haven't given any feedback gifts. Anyone you want to acknowledge?</h5>
                <%} else {%>
                    <h5 style="color: #007bff;">Here's the feedback you've given</h5>
                    <% for(let i = 0; i < myFbksOut.length; i++) { 
                        fbk = myFbksOut[i] %>
                        <% include ./partials/showfbk %>
                    <% } %> 
                <% } %>
                <p class="font-weight-light font-italic">Served by <%= hostname %></p>
            </div>
        </div> <!-- container -->

        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

        <script>
            $(document).ready( function () {
                $(function () {
                    $('[data-toggle="tooltip"]').tooltip()
                })
            });
            
            function hideDivId( divId ) {
                var theDiv = document.getElementById("fbksIn"); //theDiv = $('#fbksIn');
                console.log("theDiv is " + theDiv);
                console.log("theDiv style is " + theDiv.style.display);
                if (theDiv.style.display = "none") {
                    theDiv.style.display = "block";
                } else {
                    theDiv.style.display = "none";
                }
            }
        </script>

    </body>
</html>
