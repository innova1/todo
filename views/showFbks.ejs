    <body>
        <div class="container">
            <% include ./partials/navfbk %>
            <br />

            
                <%  let fbk = {}; %>
                <% if (myFbksIn.length == 0) { %>
                    <h5 style="color: #007bff;">No feedback gifts to display. Maybe you should ask for some?</h5>
                <%} else {%>
                    <h5 style="color: #007bff;">Hey, <%=myFbksIn[0].fbkee.shortname%>, here's the feedback you've received</h5>
            <div class="section">
                    <% for(let i = 0; i < myFbksIn.length; i++) { 
                        fbk = myFbksIn[i] %>
                        <% include ./partials/showfbk %>
                    <% } %> 
            </div>
                <% } %>

            <div id="fbksOut">
                <%  fbk = {}; %>
