            </div>
        </div> <!-- container -->

        <script src="/js/jquery.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>

        <script>
            $(document).ready( function () {
                $('.section').click(function() {
                    var d = $(this).style.display;
                    if( d === "none" {
                        d = "block";
                    } else {
                        d = "none";
                    });
                });
            });
        </script>

    </body>
</html>
