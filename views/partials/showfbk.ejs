<div class="card border-primary" style="width: 100%"> 
    <div class="card-header">
        <div class="row">
            <div class="col-sm">
                On 
                <%if (fbk.dueDate != '') { %>
                    <%=fbk.dueDate%><% 
                } else { 
                    %>Not specified<% 
                } %>, <%=fbk.fbkor.shortname%> said...
            </div>
        </div>
    </div>

    <div class="card-body">
        <h5 class ="card-title"><%=fbk.fbkee.shortname%> <%=fbk.direction%> <%=fbk.outcome%> 
            <%if (fbk.behavior != '') { %> 
            <span> using </span>
            <%=fbk.behavior%> <% } else { %>
            <% } %>
        </h5>

        <%if (fbk.details != '') { %>
        <p class="card-text"><%=fbk.detail%></p>
        <% } else  { %>
        <p class="card-text">No comment</p>
        <% } %>

    </div>
    <div class="card-footer">
            <% let rating = 0; 
            if ( fbk.rating !== null && fbk.rating !== '' ) { 
                    rating = parseInt(fbk.rating)
                } else { 
                    rating = -1
                } 
                selectObj.setSelectedTag(rating+1);
                //selectData[rating+1];
                let isFbkee = ( loggedInEmail == fbk.fbkee.email );
            %>
        <div class = "row">
            <div class = "col-sm">
                <ul class="nav justify-content-end nav-pills card-header-pills">
                    <!-- Rating shows on all but only editable on fbk in ie items that have the logged in user email on the fbkee field -->
                    <li class="nav-item">
                        <% if( isFbkee ) {
                            if( rating === -1 ) {%>
                                <span class="unrated">Please set rating:</span>
                            <%} else {%>
                                <span class="rated">Rating:</span>
                            <%}%>
                        <select id="rating" name="rating" onchange="location.href='/fbk/rate/' + selectedIndex + '/id/<%=fbk._id%>'">
                            <% for ( j = 0 ; j < 5 ; j++ ) {
                                optionText = selectObj.selectTextObjs[j].tagValue;
                                val = j - 1;
                                if( selectObj.selectTextObjs[j].isSelected ) { selText = "selected" } else { selText = ""  };%>
                                    <option value="<%=val%>" <%=selText%> ><%=optionText%></option>
                            <%}%>
                        </select>
                        <%} else {
                            if( rating === -1 ) {%>
                                <span class="unrated">Recipient has not yet rated</span>
                            <%} else {%>
                                <span class="rated">Rating:</span>
                                <%-selectObj.getSelectedValue()%>
                            <%}
                        }%>
                    </li>
                    <!--li class="nav-item">
                        <a class="nav-link" href="/fbk/edit/<%=fbk._id%>"> <i class="fas fa-pencil-square-o"></i></a>
                    </li-->
                    <% if (loggedInEmail == fbk.fbkor.email) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/task/delete/<%=fbk._id%>"> <i class="fas fa-trash-alt"></i></a>
                        </li>
                    <%} else {%>
                        <li class="nav-item">
                            <a class="nav-link"><i class="fas fa-trash-alt" style="color:lightgray;"></i></a>
                        </li>
                    <%}%>
                </ul>
            </div>  
        </div>
    </div>
</div>

<p> <!-- card -->

