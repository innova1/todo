<div class="card border-primary" style="width: 100%"> 
    <div class="card-header">
        <div class="row">
            <div class="col-sm">
                On   
                <%if (task.dueDate != '') { %>
                    <%=task.dueDate%> 
                <% } else  { %>
                    Not specified
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="card-body">
        <h5 class ="card-title"><%=task.fbkee.split(",").length%> <%=task.direction%> <%=task.outcome%> using <%=task.behavior%></h5>
         
            <%if (task.details != '') { %>
                <p class="card-text"><%=task.detail%></p>
            <% } else  { %>
                <p class="card-text">No comment</p>
            <% } %>
        
        
    </div>
    <div class="card-footer">
        <div class = "row">
            <div class = "col-sm">
                <ul class="nav justify-content-end nav-pills card-header-pills">
                    <!--li class="nav-item">
                        <a class="nav-link" href="/task/edit/<%=task._id%>"> <i class="fas fa-edit"></i></a>
                    </li-->
                    <li class="nav-item">
                        <a class="nav-link" href="/task/delete/<%=task._id%>"> <i class="fas fa-trash-alt"></i></a>
                    </li>
                </ul>
            </div>  
        </div>
    </div>
</div>
